{
  "name": "testing-and-debugging-ensuring-mern-app-reliability-salimuhamisi",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install-all": "npm install && npm install --prefix client && npm install --prefix server",
    "test": "jest",
    "test:unit": "jest --selectProjects=client --selectProjects=server --coverage",
    "test:integration": "jest --selectProjects=server --runTestsByPath server/tests/integration",
    "test:e2e": "cd client && npx cypress run"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "babel-jest": "^30.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0"
  }
}
